{
    "name": "streamdeck-wes-trigger",
    "version": "1.0.0",
    "description": "Stream Deck plugin to trigger Keyboard Maestro macros",
    "main": "com.wes.streamdeck.sdPlugin/bin/plugin.js",
    "scripts": {
        "build": "rollup -c",
        "watch": "rollup -c -w --watch.onEnd='npm run restart; sleep 1; npm run devtools-background'",
        "devtools": "./scripts/devtools.fish --show",
        "devtools-background": "./scripts/devtools.fish",
        "devtools-pi": "open http://localhost:23654",
        "link": "streamdeck link ./com.wes.streamdeck.sdPlugin",
        "unlink": "streamdeck unlink com.wes.streamdeck",
        "restart": "streamdeck restart com.wes.streamdeck",
        "stop": "streamdeck stop com.wes.streamdeck",
        "validate": "streamdeck validate ./com.wes.streamdeck.sdPlugin",
        "pack": "streamdeck pack com.wes.streamdeck.sdPlugin",
        "pack-dryrun": "streamdeck pack --dry-run com.wes.streamdeck.sdPlugin",
        "logs-webby": "tail -F /tmp/webby.log",
        "logs-plugin": "tail -F ./com.wes.streamdeck.sdPlugin/logs/com.wes.streamdeck.0.log | bat -l log",
        "logs-sdjson-kmtrigger": "tail -F ~/Library/Logs/ElgatoStreamDeck/StreamDeck.json | grep kmtrigger --line-buffered | jq --compact-output",
        "logs-sdjson-all": "tail -F ~/Library/Logs/ElgatoStreamDeck/StreamDeck.json | grep kmtrigger --line-buffered | jq --compact-output",
        "clean": "trash com.wes.streamdeck.sdPlugin/{bin,logs}"
    },
    "keywords": [
        "streamdeck",
        "keyboard-maestro",
        "elgato"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@elgato/cli": "^1.5.1",
        "@rollup/plugin-commonjs": "^28.0.0",
        "@rollup/plugin-node-resolve": "^15.2.2",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^12.1.0",
        "@tsconfig/node20": "^20.1.2",
        "@types/node": "^20.0.0",
        "@types/plist": "^3.0.5",
        "rollup": "^4.0.2",
        "tslib": "^2.6.2",
        "typescript": "^5.3.0"
    },
    "dependencies": {
        "@elgato/streamdeck": "^1.0.0",
        "@types/ws": "^8.18.1",
        "plist": "^3.1.0",
        "ws": "^8.18.3"
    }
}
